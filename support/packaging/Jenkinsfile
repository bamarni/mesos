node {
  checkout scm
  // stage('Checkout') {
  //   git branch: 'kapil/centos', changelog: false, poll: false, url: 'http://github.com/mesosphere/mesos.git'
  // }

  stage('Build') {
    parallel centos7: {
      def image = docker.build("mesos-centos-7:${env.BUILD_ID}", "-f ./support/packaging/centos/7/Dockerfile ./support/packaging/centos/7")

      image.inside("-e MESOS_TAG=${params.MESOS_TAG} -e MESOS_RELEASE=${params.MESOS_RELEASE}") {
        sh '''#!/bin/bash
          whoami
          set -x
            MESOS_VERSION=${MESOS_TAG%[-]*}

            RPMBUILD_DIR=$PWD/rpmbuild
            mkdir -p $RPMBUILD_DIR/{BUILD,RPMS,SOURCES,SPECS,SRPMS}

            cp support/packaging/common/* $RPMBUILD_DIR/SOURCES
            cp support/packaging/centos/7/mesos.spec $RPMBUILD_DIR/SPECS

            pushd $RPMBUILD_DIR/SOURCES
            if [ "$MESOS_VERSION" = "$MESOS_TAG" ]; then
              wget -nv https://dist.apache.org/repos/dist/release/mesos/${MESOS_VERSION}/mesos-${MESOS_VERSION}.tar.gz
            else
              wget -nv https://dist.apache.org/repos/dist/dev/mesos/${MESOS_TAG}/mesos-${MESOS_VERSION}.tar.gz
            fi
            popd

            echo "%_topdir    $RPMBUILD_DIR" > $HOME/.rpmmacros
            rpmbuild \
              --define "MESOS_VERSION $MESOS_VERSION" \
              --define "MESOS_RELEASE $MESOS_RELEASE" \
              -ba $RPMBUILD_DIR/SPECS/mesos.spec
        '''
      }
      archiveArtifacts artifacts: '**/*.rpm', fingerprint: true
    },

    centos6: {
      def image = docker.build("mesos-centos-6:${env.BUILD_ID}", "-f ./support/packaging/centos/6/Dockerfile ./support/packaging/centos/6")

      image.inside("-e MESOS_TAG=${params.MESOS_TAG} -e MESOS_RELEASE=${params.MESOS_RELEASE}") {
        sh '''#!/bin/bash
          whoami
          set -x
            MESOS_VERSION=${MESOS_TAG%[-]*}

            RPMBUILD_DIR=$PWD/rpmbuild
            mkdir -p $RPMBUILD_DIR/{BUILD,RPMS,SOURCES,SPECS,SRPMS}

            cp support/packaging/common/* $RPMBUILD_DIR/SOURCES
            cp support/packaging/centos/6/mesos.spec $RPMBUILD_DIR/SPECS

            pushd $RPMBUILD_DIR/SOURCES
            if [ "$MESOS_VERSION" = "$MESOS_TAG" ]; then
              wget -nv https://dist.apache.org/repos/dist/release/mesos/${MESOS_VERSION}/mesos-${MESOS_VERSION}.tar.gz
            else
              wget -nv https://dist.apache.org/repos/dist/dev/mesos/${MESOS_TAG}/mesos-${MESOS_VERSION}.tar.gz
            fi
            popd

            echo "%_topdir    $RPMBUILD_DIR" > $HOME/.rpmmacros

            source scl_source enable devtoolset-3
            rpmbuild \
              --define "MESOS_VERSION $MESOS_VERSION" \
              --define "MESOS_RELEASE $MESOS_RELEASE" \
              -ba $RPMBUILD_DIR/SPECS/mesos.spec
        '''
      }
      archiveArtifacts artifacts: '**/*.rpm', fingerprint: true
    }
  }
}
